{require_min_otp_vsn, "17"}.

{erl_opts, [debug_info, warn_unused_vars, warn_shadow_vars]}.
{erl_opts, [{i, "include"},
            {src_dirs, ["src"]}]}.

{profiles, [
    {test, [
        {deps, [
			{proper,"1.4.0"}
        ]},

        {eunit_opts, [verbose]},

        {xref_checks, [
            undefined_function_calls,
            locals_not_used,
            deprecated_function_calls
        ]}
    ]},
	{doc_private, [
		{edoc_opts, [
			{private, true}
		]}
	]}
]}.

{edoc_opts, [
    {preprocess, true}, {stylesheet, "style.css"}
]}.